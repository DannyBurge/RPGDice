<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginMain">

    <TextView
        android:id="@+id/rollMainResultListItem"
        style="@style/buttonFromGrid"
        android:background="?attr/colorPrimary"
        android:text="9999"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rollConfigurationListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginMain"
        android:text="100d100+100"
        android:textSize="@dimen/textSize"
        app:layout_constraintStart_toEndOf="@+id/rollMainResultListItem"
        app:layout_constraintTop_toTopOf="@+id/rollMainResultListItem" />

    <TextView
        android:id="@+id/rollResultsListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSizeSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rollConfigurationListItem"
        app:layout_constraintTop_toBottomOf="@+id/rollConfigurationListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>