<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginMain">

    <TextView
        android:id="@+id/buttonInListItem"
        style="@style/buttonFromGrid"
        android:background="?attr/colorPrimary"
        android:textColor="?attr/colorOnPrimary"
        android:text="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diceTitleInListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d100"
        android:textSize="@dimen/buttonTextSizeSmall"
        app:layout_constraintEnd_toEndOf="@+id/buttonInListItem"
        app:layout_constraintStart_toStartOf="@+id/buttonInListItem"
        app:layout_constraintTop_toBottomOf="@+id/buttonInListItem" />

</androidx.constraintlayout.widget.ConstraintLayout>